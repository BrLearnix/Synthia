<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo de la Empresa -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/synthia"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <!-- Título -->
        <TextView
            android:id="@+id/tituloTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tech Solutions S.A.C."
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="#333333" />

        <!-- Card para Misión -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E8F5E9"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Misión"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proveer soluciones tecnológicas innovadoras que impulsen la transformación digital de nuestros clientes."
                    android:layout_marginTop="4dp"
                    android:textColor="#555555" />
            </LinearLayout>
        </LinearLayout>

        <!-- Card para Visión -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E3F2FD"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visión"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ser líderes en el mercado tecnológico a nivel latinoamericano, ofreciendo productos y servicios de alta calidad."
                    android:layout_marginTop="4dp"
                    android:textColor="#555555" />
            </LinearLayout>
        </LinearLayout>

        <!-- Card para Descripción -->


        <!-- Card para Dirección -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FBE9E7"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location"
                android:contentDescription="Dirección"
                android:tint="#E57373"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Av. Tecnológica 123, Lima, Perú"
                    android:layout_marginTop="4dp"
                    android:textColor="#555555" />
            </LinearLayout>
        </LinearLayout>

        <!-- Card para Contacto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E0F7FA"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_phone"
                android:contentDescription="Contacto"
                android:layout_marginEnd="12dp"
                app:tint="#009688" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contacto"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#00796B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono: +51 987654321 | Email: contacto@techsolutions.com"
                    android:layout_marginTop="4dp"
                    android:textColor="#555555" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
