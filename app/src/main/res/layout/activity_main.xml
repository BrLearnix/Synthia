<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4524DADA"
    android:orientation="vertical"
    android:padding="30dp">

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/bienvenidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Bienvevidos"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="#000000" />

        <!-- Imagen de la app -->
        <ImageView
            android:id="@+id/myGifImageView"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Nombre de la app -->


        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SynthIA"
            android:textSize="45sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="#31D9D9" />

        <!-- Descripción de la app-->
        <TextView
            android:id="@+id/app_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Listo para comenzar la entrevista con SynthIA?"
            android:textSize="15sp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:textColor="#333333" />
    </LinearLayout>

    <!-- Botón Get Started -->
    <Button
        android:id="@+id/get_started_button"
        android:layout_width="352dp"
        android:layout_height="61dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#31D9D9"
        android:text="Iniciar"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal" />

    <!-- Derechos reservados -->
    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Derechos Reservados ©2024 Desarrollado por Bernardo "
        android:textSize="13sp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:textColor="#888888"
        android:layout_gravity="center_horizontal" />
</LinearLayout>

