<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="8dp"
        android:layout_margin="12dp"
        android:clipToPadding="false"
        android:backgroundTint="#E3F2FD">

        <!-- Icono del área -->
        <ImageView
            android:id="@+id/iconoAreaImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/synthia"
            android:layout_gravity="center"
            android:contentDescription="Icono del área"
            android:layout_marginBottom="16dp"
            app:tint="#42A5F5" />

        <!-- Título del área -->
        <TextView
            android:id="@+id/tituloTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Área de Desarrollo de Software"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#0D47A1"
            android:paddingBottom="12dp" />

        <!-- Separador visual -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#90CAF9"
            android:layout_marginVertical="12dp" />

        <!-- Descripción del área -->
        <TextView
            android:id="@+id/descripcionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="El área de desarrollo de software se encarga de diseñar, implementar y mantener soluciones tecnológicas innovadoras para satisfacer las necesidades del mercado."
            android:textSize="16sp"
            android:lineSpacingExtra="8dp"
            android:textColor="#37474F"
            android:layout_marginBottom="16dp" />

        <!-- Información detallada -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Responsabilidades -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#E8F5E9"
                android:layout_marginBottom="8dp"
                android:radius="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_responsibilities"
                    android:contentDescription="Responsabilidades"
                    android:tint="#388E3C"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Responsabilidades:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32" />
            </LinearLayout>

            <TextView
                android:id="@+id/responsabilidadesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Desarrollo de aplicaciones móviles y web.\n• Optimización de bases de datos.\n• Pruebas de software y resolución de errores."
                android:paddingStart="32dp"
                android:textColor="#616161"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

            <!-- Requisitos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#FFF3E0"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_requirements"
                    android:contentDescription="Requisitos"
                    android:tint="#F57C00"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requisitos:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#E65100" />
            </LinearLayout>

            <TextView
                android:id="@+id/requisitosTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Experiencia en programación (Java, Python).\n• Conocimientos en metodologías ágiles.\n• Trabajo en equipo y buena comunicación."
                android:paddingStart="32dp"
                android:textColor="#616161"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

            <!-- Beneficios -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#FFEBEE"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_benefits"
                    android:contentDescription="Beneficios"
                    android:layout_marginEnd="12dp"
                    app:tint="#C62828" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beneficios:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#B71C1C" />
            </LinearLayout>

            <TextView
                android:id="@+id/beneficiosTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Trabajo remoto y flexible.\n• Cursos de capacitación pagados.\n• Oportunidades de crecimiento profesional."
                android:paddingStart="32dp"
                android:textColor="#616161"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
