<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:spacing="16dp">

        <!-- Logo de la Empresa -->
        <ImageView
            android:id="@+id/company_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="Logo de la Empresa"
            android:src="@drawable/synthia"
            android:elevation="4dp"/>

        <!-- Nombre de la Empresa -->
        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Empresa"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="16dp"/>

        <!-- Eslogan -->
        <TextView
            android:id="@+id/company_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Innovación y Excelencia"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="#666"
            android:layout_marginBottom="32dp"/>

        <!-- Sección: Sobre Nosotros -->
        <TextView
            android:id="@+id/section_about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sobre Nosotros"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/company_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Somos una empresa líder con más de 10 años de experiencia en ofrecer soluciones innovadoras."
            android:textSize="16sp"
            android:textColor="#555"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="32dp"/>

        <!-- Sección: Contacto -->
        <TextView
            android:id="@+id/section_contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/contact_background"
            android:elevation="4dp"
            android:layout_marginBottom="32dp">

            <!-- Teléfono -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_phone"
                    android:contentDescription="Icono de Teléfono"
                    android:tint="#00796B"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+51 987 654 321"
                    android:textSize="16sp"
                    android:textColor="#555"/>
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_email"
                    android:contentDescription="Icono de Email"
                    android:tint="#00796B"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="info@empresa.com"
                    android:textSize="16sp"
                    android:textColor="#555"/>
            </LinearLayout>

            <!-- Dirección -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location"
                    android:contentDescription="Icono de Ubicación"
                    android:tint="#00796B"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Av. Siempre Viva 123, Lima, Perú"
                    android:textSize="16sp"
                    android:textColor="#555"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Sección: Redes Sociales -->
        <TextView
            android:id="@+id/section_social_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Síguenos en Redes Sociales"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/social_facebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Icono Facebook"
                android:layout_margin="8dp" />

            <ImageView
                android:id="@+id/social_twitter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Icono Twitter"
                android:layout_margin="8dp" />

            <ImageView
                android:id="@+id/social_instagram"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Icono Instagram"
                android:layout_margin="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
