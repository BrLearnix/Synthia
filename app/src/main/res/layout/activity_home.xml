<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F5F5">

    <!-- Header con saludo personalizado -->
    <!-- Header con saludo personalizado -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/greetingContainer"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/textHello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola, "
                android:textColor="#3A3A3A"
                android:textSize="22sp"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/textArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#3A3A3A"
                android:textSize="22sp"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/textUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#00796B"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </RelativeLayout>


    <!-- Botones principales -->
    <LinearLayout
        android:id="@+id/buttonInterview"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:background="@drawable/button_border"
        android:padding="20dp"
        android:layout_marginBottom="12dp"
        android:elevation="3dp"
        android:backgroundTint="#E3F2FD"
        android:gravity="center_vertical|start"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comenzar\nEntrevista"
            android:textColor="#1565C0"
            android:paddingStart="16dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_interview"
            android:layout_marginEnd="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonWorkspace"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:background="@drawable/button_border"
        android:padding="20dp"
        android:layout_marginBottom="12dp"
        android:elevation="3dp"
        android:backgroundTint="#FFF3E0"
        android:gravity="center_vertical|start"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Área de\nTrabajo"
            android:textColor="#E65100"
            android:paddingStart="16dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_workspace"
            android:layout_marginEnd="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonAboutCompany"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:background="@drawable/button_border"
        android:padding="20dp"
        android:elevation="3dp"
        android:backgroundTint="#E8F5E9"
        android:gravity="center_vertical|start"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acerca de la\nEmpresa"
            android:textColor="#2E7D32"
            android:paddingStart="16dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_about_company"
            android:layout_marginEnd="16dp" />
    </LinearLayout>

    <!-- Menú inferior con íconos de navegación -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:elevation="5dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/menuHome"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_home"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_button"
                android:contentDescription="Home"
                android:clickable="true"
                android:focusable="true"
                app:tint="#3A3A3A" />

            <ImageButton
                android:id="@+id/menuUser"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_user"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="User"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:clickable="true"
                android:focusable="true"
                app:tint="#3A3A3A" />

            <ImageButton
                android:id="@+id/menuSettings"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_settings"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="Settings"
                android:clickable="true"
                android:focusable="true"
                app:tint="#3A3A3A" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
