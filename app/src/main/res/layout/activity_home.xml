<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingTop="40dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/textHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola, "
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonInterview"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:background="@drawable/button_border"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical|start"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comenzar \nEntrevista"
            android:textColor="#86A6AA"
            android:paddingStart="20dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAllCaps="false"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_interview"
            android:layout_marginEnd="8dp" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/buttonWorkspace"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:background="@drawable/button_border"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical|start"
        android:clickable="true"
        android:focusable="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Área de \nTrabajo"
            android:textColor="#86A6AA"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:textSize="30sp"
            android:textAllCaps="false"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_workspace"
            android:layout_marginEnd="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonAboutCompany"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:background="@drawable/button_border"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acerca de la \nEmpresa"
            android:textColor="#86A6AA"
            android:paddingStart="20dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAllCaps="false"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_about_company"
            android:layout_marginEnd="8dp" />
    </LinearLayout>

    <!-- Menú inferior con íconos de navegación -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/menuHome"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginEnd="80dp"
                android:src="@drawable/ic_home"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_button"
                android:contentDescription="Home"
                android:clickable="true"
                android:focusable="true"/>

            <ImageButton
                android:id="@+id/menuUser"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginEnd="80dp"
                android:src="@drawable/ic_user"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_button"
                android:contentDescription="User"
                android:clickable="true"
                android:focusable="true"/>

            <ImageButton
                android:id="@+id/menuSettings"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_settings"
                android:scaleType="fitCenter"
                android:padding="6dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="Settings"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
