<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Nombre de la aplicación en la parte superior -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SynthIA"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Espaciador para centrar el contenido -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" /> <!-- Esto empuja los elementos hacia arriba y abajo -->

    <!-- Botón centrado -->
    <Button
        android:id="@+id/voiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Entrevista"
        android:layout_gravity="center"
        android:backgroundTint="#4CAF50"
        android:background="@drawable/circular_button"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chatLayout"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_margin="10dp">

            <!-- Ejemplo de un mensaje de usuario (burbuja enviada) -->
            <TextView
                android:id="@+id/requestText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola"
                android:paddingTop="16dp"
                android:gravity="end"
                android:background="@drawable/chat_bubble_sent"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:maxWidth="270dp"
                android:layout_marginBottom="10dp"/>

            <!-- Ejemplo de una respuesta del bot (burbuja recibida) -->
            <TextView
                android:id="@+id/responseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". . ."
                android:paddingTop="16dp"
                android:gravity="start"
                android:layout_gravity="start"
                android:background="@drawable/chat_bubble_received"
                android:padding="12dp"
                android:textColor="#000000"
                android:maxWidth="270dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Campo de entrada de texto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start">

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_border"
            android:gravity="start"
            android:hint="Responder..."
            android:textSize="15sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="text" />

    </LinearLayout>

    <!-- Pie de página -->
    <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="© 2024 BrLearnix"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

</LinearLayout>

